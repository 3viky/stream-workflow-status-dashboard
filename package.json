{
  "name": "@3viky/stream-workflow-status-dashboard",
  "version": "1.0.0",
  "description": "Stream workflow status tracking - core business logic and dashboard UI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "import": "./dist/database/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    }
  },
  "bin": {
    "stream-status-server": "./dist/bin/server.js"
  },
  "files": [
    "dist",
    "dashboard",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm build:node && pnpm build:ui",
    "build:node": "tsc -p tsconfig.json",
    "build:ui": "vite build",
    "dev": "tsc -p tsconfig.json --watch",
    "dev:ui": "vite",
    "start:server": "node dist/bin/server.js",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.ui.json --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "vitest",
    "clean": "rm -rf dist dashboard"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "lucide-react": "^0.509.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^1.8.11",
    "simple-git": "^3.27.0",
    "styled-components": "^6.1.18",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.19.2",
    "@types/react": "18.3.26",
    "@types/react-dom": "18.3.5",
    "@types/react-window": "^1.8.8",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^5.1.1",
    "typescript": "^5.7.2",
    "vite": "^7.2.4",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "author": "Victoria Lackey <VictoriaLackey@pm.me>",
  "license": "MIT",
  "_": {
    "registry": "github",
    "publish": false,
    "build": true
  }
}
